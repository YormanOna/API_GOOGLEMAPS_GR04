@model IEnumerable<EurekaWeb.Models.Rest.Sucursal>
@{
    Layout = null;
    var usuario = (string?)ViewBag.Usuario ?? "";
    var apiKey = (string?)ViewBag.GoogleMapsApiKey ?? "";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Nuestras Sucursales - EurekaBank</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #0f3460 50%, #16213e 100%);
            min-height: 100vh;
        }

        .header {
            background: linear-gradient(135deg, rgba(255,255,255,.95) 0%, rgba(255,255,255,.98) 100%);
            border-bottom: 5px solid #c00000;
            padding: 20px 40px;
            box-shadow: 0 4px 20px rgba(0,0,0,.3);
            position: sticky;
            top: 0;
            z-index: 100;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header-title {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .header-title h1 {
            background: linear-gradient(135deg, #c00000 0%, #0052a3 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 28px;
            font-weight: 900;
        }

        .btn-back {
            background: linear-gradient(135deg, #c00000 0%, #900000 100%);
            color: #fff;
            border: none;
            padding: 12px 25px;
            border-radius: 25px;
            cursor: pointer;
            font-weight: bold;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all .3s ease;
        }

        .btn-back:hover {
            background: linear-gradient(135deg, #900000 0%, #600000 100%);
            transform: translateY(-2px);
        }

        .container {
            display: flex;
            height: calc(100vh - 90px);
            padding: 20px;
            gap: 20px;
        }

        .sidebar {
            width: 450px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,.3);
            overflow-y: auto;
            padding: 25px;
        }

        .sidebar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 3px solid #c00000;
        }

        .sidebar-header h2 {
            color: #2c3e50;
            font-size: 22px;
        }

        .btn-nueva {
            background: linear-gradient(135deg, #0052a3, #003d7a);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 20px;
            cursor: pointer;
            font-weight: bold;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
            transition: all .3s ease;
        }

        .btn-nueva:hover {
            background: linear-gradient(135deg, #003d7a, #002752);
            transform: scale(1.05);
        }

        .sucursal-card {
            background: linear-gradient(to bottom, #f8f9fa, #fff);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 15px;
            border: 2px solid #e0e0e0;
            transition: all .3s ease;
            cursor: pointer;
        }

        .sucursal-card:hover {
            border-color: #c00000;
            box-shadow: 0 5px 15px rgba(192,0,0,.2);
            transform: translateY(-3px);
        }

        .sucursal-card h3 {
            color: #c00000;
            font-size: 18px;
            margin-bottom: 8px;
        }

        .sucursal-info {
            display: flex;
            flex-direction: column;
            gap: 5px;
            color: #555;
            font-size: 14px;
            margin-bottom: 12px;
        }

        .sucursal-actions {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
        }

        .btn-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all .3s ease;
        }

        .btn-info { background: linear-gradient(135deg, #6c757d, #5a6268); }
        .btn-location { background: linear-gradient(135deg, #28a745, #218838); }
        .btn-edit { background: linear-gradient(135deg, #0052a3, #003d7a); }
        .btn-delete { background: linear-gradient(135deg, #c00000, #900000); }

        .btn-icon:hover {
            transform: scale(1.15);
            box-shadow: 0 4px 12px rgba(0,0,0,.3);
        }

        .map-container {
            flex: 1;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,.3);
            overflow: hidden;
            position: relative;
        }

        #map {
            width: 100%;
            height: 100%;
        }

        .map-controls {
            position: absolute;
            top: 15px;
            left: 15px;
            z-index: 10;
            display: flex;
            gap: 10px;
        }

        .map-btn {
            background: white;
            border: none;
            padding: 10px 15px;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            box-shadow: 0 2px 8px rgba(0,0,0,.2);
            transition: all .3s ease;
        }

        .map-btn.active {
            background: #c00000;
            color: white;
        }

        .map-btn:hover {
            box-shadow: 0 4px 12px rgba(0,0,0,.3);
        }

        .alert {
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 2px solid #c3e6cb;
        }

        .alert-error {
            background: #f8d7da;
            color: #721c24;
            border: 2px solid #f5c6cb;
        }

        .fullscreen-btn {
            position: absolute;
            bottom: 100px;
            right: 15px;
            z-index: 10;
            background: white;
            border: none;
            width: 45px;
            height: 45px;
            border-radius: 10px;
            cursor: pointer;
            box-shadow: 0 2px 8px rgba(0,0,0,.2);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .human-icon {
            position: absolute;
            bottom: 50px;
            right: 15px;
            z-index: 10;
            background: white;
            border: none;
            width: 45px;
            height: 45px;
            border-radius: 10px;
            cursor: pointer;
            box-shadow: 0 2px 8px rgba(0,0,0,.2);
        }

        /* Modal de confirmaci√≥n de eliminaci√≥n */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .modal-overlay.active {
            display: flex;
        }

        .modal-content {
            background: white;
            border-radius: 20px;
            width: 500px;
            max-width: 90%;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0,0,0,.5);
            animation: modalSlideIn 0.3s ease;
        }

        @@keyframes modalSlideIn {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .modal-header {
            background: linear-gradient(135deg, #c00000 0%, #900000 100%);
            padding: 30px;
            text-align: center;
            color: white;
        }

        .modal-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 15px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .modal-icon svg {
            width: 50px;
            height: 50px;
            fill: white;
        }

        .modal-header h2 {
            font-size: 28px;
            font-weight: bold;
            margin: 0;
        }

        .modal-body {
            padding: 30px;
            text-align: center;
        }

        .modal-body p {
            font-size: 18px;
            color: #333;
            margin-bottom: 15px;
        }

        .modal-sucursal-nombre {
            font-weight: bold;
            color: #c00000;
            font-size: 20px;
        }

        .modal-warning {
            background: #fff3cd;
            border: 2px solid #ffc107;
            border-radius: 10px;
            padding: 15px;
            margin-top: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .modal-warning-icon {
            font-size: 24px;
        }

        .modal-warning p {
            margin: 0;
            font-size: 14px;
            color: #856404;
            text-align: left;
        }

        .modal-buttons {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .modal-btn {
            flex: 1;
            padding: 15px;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: all .3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .modal-btn-cancelar {
            background: #6c757d;
            color: white;
        }

        .modal-btn-cancelar:hover {
            background: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108,117,125,.4);
        }

        .modal-btn-eliminar {
            background: linear-gradient(135deg, #c00000, #900000);
            color: white;
        }

        .modal-btn-eliminar:hover {
            background: linear-gradient(135deg, #900000, #600000);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(192,0,0,.5);
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="header-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="#c00000" viewBox="0 0 24 24">
                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
            </svg>
            <h1>Nuestras Sucursales</h1>
        </div>
        <a href="@Url.Action("Menu", "Home")" class="btn-back">
            ‚Üê Volver al Men√∫
        </a>
    </div>

    <div class="container">
        <div class="sidebar">
            <div class="sidebar-header">
                <h2>Lista de Sucursales</h2>
                <a href="@Url.Action("Crear", "Sucursales")" class="btn-nueva">
                    ‚ûï Nueva Sucursal
                </a>
            </div>

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success">@TempData["Mensaje"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-error">@TempData["Error"]</div>
            }

            @foreach (var sucursal in Model)
            {
                <div class="sucursal-card" onclick="centerMap(@(sucursal.Latitud?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "null"), @(sucursal.Longitud?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "null"), '@sucursal.Nombre')">
                    <h3>@sucursal.Nombre</h3>
                    <div class="sucursal-info">
                        <div><strong>üìç C√≥digo:</strong> @sucursal.Codigo</div>
                        <div><strong>üèôÔ∏è Ciudad:</strong> @sucursal.Ciudad</div>
                        <div><strong>üì´ Direcci√≥n:</strong> @(sucursal.Direccion ?? "N/A")</div>
                    </div>
                    <div class="sucursal-actions" onclick="event.stopPropagation();">
                        <button class="btn-icon btn-info" onclick="window.location.href='@Url.Action("Detalle", "Sucursales", new { id = sucursal.Codigo })'" title="Ver detalle">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 24 24">
                                <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                            </svg>
                        </button>
                        @if (sucursal.Latitud.HasValue && sucursal.Longitud.HasValue)
                        {
                            <button class="btn-icon btn-location" onclick="openGoogleMaps(@sucursal.Latitud.Value.ToString(System.Globalization.CultureInfo.InvariantCulture), @sucursal.Longitud.Value.ToString(System.Globalization.CultureInfo.InvariantCulture))" title="C√≥mo llegar">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 24 24">
                                    <path d="M21.71 11.29l-9-9c-.39-.39-1.02-.39-1.41 0l-9 9c-.39.39-.39 1.02 0 1.41l9 9c.39.39 1.02.39 1.41 0l9-9c.39-.38.39-1.01 0-1.41zM14 14.5V12h-4v3H8v-4c0-.55.45-1 1-1h5V7.5l3.5 3.5-3.5 3.5z"/>
                                </svg>
                            </button>
                        }
                        <button class="btn-icon btn-edit" onclick="window.location.href='@Url.Action("Editar", "Sucursales", new { id = sucursal.Codigo })'" title="Editar">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 24 24">
                                <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                            </svg>
                        </button>
                        <button class="btn-icon btn-delete" onclick="mostrarModalEliminar('@sucursal.Codigo', '@sucursal.Nombre')" title="Eliminar">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 24 24">
                                <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/>
                            </svg>
                        </button>
                    </div>
                </div>
            }
        </div>

        <div class="map-container">
            <div class="map-controls">
                <button class="map-btn active" onclick="setMapType('roadmap')">Mapa</button>
                <button class="map-btn" onclick="setMapType('satellite')">Sat√©lite</button>
            </div>
            <button class="fullscreen-btn" onclick="toggleFullscreen()" title="Pantalla completa">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                    <path d="M7 14H5v5h5v-2H7v-3zm-2-4h2V7h3V5H5v5zm12 7h-3v2h5v-5h-2v3zM14 5v2h3v3h2V5h-5z"/>
                </svg>
            </button>
            <div id="map"></div>
        </div>
    </div>

    <script src="https://maps.googleapis.com/maps/api/js?key=@apiKey&callback=initMap" async defer></script>
    <script>
        let map;
        let markers = [];
        const sucursales = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model));

        function initMap() {
            const ecuador = { lat: -1.8312, lng: -78.1834 };
            
            map = new google.maps.Map(document.getElementById('map'), {
                zoom: 7,
                center: ecuador,
                mapTypeId: 'roadmap',
                streetViewControl: true,
                fullscreenControl: false
            });

            sucursales.forEach(sucursal => {
                if (sucursal.Latitud && sucursal.Longitud) {
                    const marker = new google.maps.Marker({
                        position: { lat: parseFloat(sucursal.Latitud), lng: parseFloat(sucursal.Longitud) },
                        map: map,
                        title: sucursal.Nombre,
                        animation: google.maps.Animation.DROP
                    });

                    const infoWindow = new google.maps.InfoWindow({
                        content: `
                            <div style="padding: 10px;">
                                <h3 style="color: #c00000; margin-bottom: 8px;">${sucursal.Nombre}</h3>
                                <p><strong>Ciudad:</strong> ${sucursal.Ciudad}</p>
                                <p><strong>Direcci√≥n:</strong> ${sucursal.Direccion || 'N/A'}</p>
                            </div>
                        `
                    });

                    marker.addListener('click', () => {
                        markers.forEach(m => m.infoWindow.close());
                        infoWindow.open(map, marker);
                    });

                    markers.push({ marker, infoWindow });
                }
            });
        }

        function centerMap(lat, lng, nombre) {
            if (lat !== null && lng !== null && !isNaN(lat) && !isNaN(lng)) {
                const position = { lat: parseFloat(lat), lng: parseFloat(lng) };
                map.setCenter(position);
                map.setZoom(15);
                
                const marker = markers.find(m => m.marker.getTitle() === nombre);
                if (marker) {
                    markers.forEach(m => m.infoWindow.close());
                    marker.infoWindow.open(map, marker.marker);
                }
            }
        }

        function setMapType(type) {
            map.setMapTypeId(type);
            document.querySelectorAll('.map-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
        }

        function toggleFullscreen() {
            const mapContainer = document.querySelector('.map-container');
            if (!document.fullscreenElement) {
                mapContainer.requestFullscreen();
            } else {
                document.exitFullscreen();
            }
        }

        function openGoogleMaps(lat, lng) {
            if (lat && lng && !isNaN(lat) && !isNaN(lng)) {
                window.open(`https://www.google.com/maps/dir/?api=1&destination=${lat},${lng}`, '_blank');
            } else {
                alert('Coordenadas no v√°lidas para esta sucursal');
            }
        }

        // Funciones para el modal de eliminaci√≥n
        let sucursalAEliminar = { codigo: '', nombre: '' };

        function mostrarModalEliminar(codigo, nombre) {
            sucursalAEliminar = { codigo, nombre };
            document.getElementById('modal-sucursal-nombre').textContent = nombre;
            document.getElementById('modalEliminar').classList.add('active');
        }

        function cerrarModal() {
            document.getElementById('modalEliminar').classList.remove('active');
            sucursalAEliminar = { codigo: '', nombre: '' };
        }

        function confirmarEliminacion() {
            // Crear un formulario y enviarlo
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("Eliminar", "Sucursales")/' + sucursalAEliminar.codigo;
            document.body.appendChild(form);
            form.submit();
        }

        // Cerrar modal al hacer clic fuera de √©l
        document.addEventListener('click', function(e) {
            const modal = document.getElementById('modalEliminar');
            if (e.target === modal) {
                cerrarModal();
            }
        });
    </script>

    <!-- Modal de Confirmaci√≥n de Eliminaci√≥n -->
    <div id="modalEliminar" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"/>
                    </svg>
                </div>
                <h2>Confirmar Eliminaci√≥n</h2>
            </div>
            <div class="modal-body">
                <p>¬øEst√° seguro que desea eliminar la sucursal?</p>
                <p class="modal-sucursal-nombre" id="modal-sucursal-nombre"></p>
                
                <div class="modal-warning">
                    <span class="modal-warning-icon">üí°</span>
                    <p>Esta acci√≥n marcar√° la sucursal como inactiva.</p>
                </div>

                <div class="modal-buttons">
                    <button type="button" class="modal-btn modal-btn-cancelar" onclick="cerrarModal()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 24 24">
                            <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                        </svg>
                        Cancelar
                    </button>
                    <button type="button" class="modal-btn modal-btn-eliminar" onclick="confirmarEliminacion()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 24 24">
                            <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/>
                        </svg>
                        Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
